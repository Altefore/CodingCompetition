	public void resetGame(){
		score = 0;
		shots = 0;
		misses = 0;

		pauseTime = 0;

		pause = false;
		gameBeingPlayed = false;
		lastBoolean = true;
		is1Invincible = false;
		is2Invincible = false;

		enemyCount = 0;
		playerLives = 3;
		player1 = null;
		player2 = null;

		startGame();
	}
	
	public void endLevel(Graphics g){
		if(lastBoolean){
			score = score + (score*(shots-misses))/shots;
			pauseTime = System.currentTimeMillis();
			lastBoolean = false;
		}
		if (level >= 4) {
			endLevelScreen(g, "YOU WIN");
			if (System.currentTimeMillis() - pauseTime >= 3000) {

				if (keyHandler.spacePressed) {
					g.dispose();
					strategy.show();
					gameOver();
				}
			}
		}
		
		else{
			endLevelScreen(g, String.format("LEVEL %d COMPLETE", level));
			if (System.currentTimeMillis() - pauseTime >= 3000) {

				messageLabel(g,
						String.format("PRESS SPACE FOR LEVEL %d", (level + 1)),300);
				if (keyHandler.spacePressed) {
					lastBoolean = true;
					level++;
					levelLoader();
				}
			}
		}
	}
	
	public void levelLoader(){
		
		if(level==2){
			loadLevel2();
			//loadBoss();
		}
		if(level==3){
			loadLevel3();
		}
		if(level==4){
			loadBoss();
		}
		else{
			return;
		}
		
	}

