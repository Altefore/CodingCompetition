	@Override
	public void update() {
		
		if(System.currentTimeMillis() % DURATION < DURATION/3)
		{
			if(hits == 0)
			{	
				setSprite(frame1);
			}
			if(hits == 1)
			{
				setSprite(frame4);
			}
			if(hits == 2)
			{
				setSprite(frame7);
			}
		}
		else if (System.currentTimeMillis() % DURATION < DURATION*2/3)
		{
			if(hits == 0)
			{	
				setSprite(frame2);
			}
			if(hits == 1)
			{
				setSprite(frame5);
			}
			if(hits == 2)
			{
				setSprite(frame8);
			}
		}
		else
		{
			if(hits == 0)
			{	
				setSprite(frame3);
			}
			if(hits == 1)
			{
				setSprite(frame6);
			}
			if(hits == 2)
			{
				setSprite(frame9);
			}
		}
	}
	
	@Override
	public void collidedWith(Actor other) {
		// TODO Auto-generated method stub
		
		if(other instanceof Missle)
		{
			if(hits == 0)
			{
				hits = 1;
				this.multiplier = 1;
			}
			else if(hits == 1)
			{
				hits = 2;
				this.multiplier = 2.5;
			}
			else if(hits == 2)
			{
				getGame().SoundController.playDeath("Short");
				getGame().addActor(new Explosion(getGame(), getX(), getY()));
			
				getGame().removeActor(this);
				isDead = true;
				Game.enemyCount--;
				getGame().addScore(score);
			}
		}
		
		if(other instanceof Player){
			getGame().removeActor(this);
			Game.enemyCount--;
			getGame().addScore(score);
		}
		
	}
	
}
