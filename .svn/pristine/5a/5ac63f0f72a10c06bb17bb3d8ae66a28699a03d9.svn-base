	public void update() {
		// TODO Auto-generated method stub
		if(getY() > 800)
		{
			getGame().removeActor(this);
		}
		
	}
	
	@Override
	public void draw(Graphics g)
	{
		g.setColor(color);
		g.fillRect((int)getX(), (int)getY(), 3, 3);
	}
	
